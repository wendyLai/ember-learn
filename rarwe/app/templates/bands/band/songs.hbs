<div class="row">
	<div class="list-group songs">
		{{#if canCreateSong}}
			<div class="list-group-item song">
				<form {{action "createSong" on="submit"}}>
					{{input type="text" class="new-song" placeholder="New song" value=title}}
					<button type="submit" class="btn btn-primary btn-sm new-song-button" disabled={{isAddButtonDisabled}}>Add</button>
				</form>
			</div>
		{{/if}}
		{{#unless canCreateSong}}
			<div class="list-group-item empty-list">
				<div class="empty-message">
					There are no songs yet. Why don't you 
					<a href="#" {{action "enableSongCreation"}}>create one?</a>
				</div>
			</div>
		{{/unless}}
		{{#each model.songs as |song|}}
			<div class="list-group-item song">
				{{song.title}}
				{{star-rating item=song rating=song.rating setAction="updateRating"}}
			</div>
		{{/each}}
	</div>
</div>